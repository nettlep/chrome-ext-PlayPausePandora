{
   "background": {
      "page": "background.html",
      "persistent": true
   },
   "browser_action": {
      "default_icon": "action-play.png"
   },
   "content_scripts": [ {
      "js": [ "pppandora.js" ],
      "matches": [ "*://*.pandora.com/*" ],
      "run_at": "document_end"
   } ],
   "description": "Play/Pause Pandora from the Toolbar",
   "icons": {
      "128": "icon128.png"
   },
   "manifest_version": 2,
   "name": "Pandora Bar Button",
   "permissions": 
   [
      "tabs",
      "webNavigation",
      "http://*.pandora.com/",
      "https://*.pandora.com/"
   ],
   "version": "1.0.0"
}
